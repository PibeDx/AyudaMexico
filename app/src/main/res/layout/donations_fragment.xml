<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/card_topos_mx_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Brigada de Rescate Topos Tlaltelolco, A.C"
                    android:textColor="@color/orange"
                    android:textSize="22sp"
                    />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Paypal: donativos@brigada-rescate-topos.org"
                    android:textIsSelectable="true"
                    android:textSize="16sp"
                    />


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Santander Cuenta: 92-00070929-4"
                    android:textIsSelectable="true"
                    android:textSize="16sp"
                    />


                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="CLABE: 014180920007092942"
                    android:textIsSelectable="true"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="REFERENCIA: Brigada de Rescate Topos Tlaltelolco, A.C."
                    android:textIsSelectable="true"
                    android:textSize="16sp"
                    />

                <Button
                    android:id="@+id/topos_mx_url"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="@string/quiero_ayudar"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card_view_cruz_roja_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/card_view_layout_padding"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cruz Roja Méxicana‏ "
                    android:textColor="@color/orange"
                    android:textSize="22sp"
                    />

                <Button
                    android:id="@+id/cruz_roja_url"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="@string/quiero_ayudar"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card_view_comoayudar_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/card_view_layout_padding"
                >

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Como Ayudar - Ayuda Sismo 19 de Septiembre "
                    android:textColor="@color/orange"
                    android:textSize="22sp"
                    />

                <TextView
                    android:id="@+id/text_comoayudar_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="A continuación encontrarás diferentes organizaciones, centros de acopio o formas de ayudar a los afectados o rescatistas del sismo."
                    android:textIsSelectable="true"
                    android:textSize="16sp"
                    />

                <Button
                    android:id="@+id/comoayudar_url"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="@string/quiero_ayudar"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card_view_impact_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/card_view_layout_padding"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FUNDACION GENERA DESARROLLO AC "
                    android:textColor="@color/orange"
                    android:textSize="22sp"
                    />

                <TextView
                    android:id="@+id/text_impact_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Varios brigadistas nos dijeron que hacen falta herramientas para que los rescates sean más eficientes. Hablamos con Truper, empresa de herramientas de construcción, y logramos que nos dieran sus productos con 50% de descuento del precio de distribuidor (casi regalados) para donar a las brigadas de rescate. Se las haremos llegar lo más rápido posible con el apoyo logístico de Kilo de Ayuda. Las herramientas sólo serán entregadas a rescatistas profesionales."
                    android:textIsSelectable="true"
                    android:textSize="16sp"
                    />

                <Button
                    android:id="@+id/impact_url"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="@string/quiero_ayudar"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"/>

            </LinearLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card_view_amzn_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/card_view_layout_padding"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amazon + Cruz Roja"
                    android:textColor="@color/orange"
                    android:textSize="22sp"
                    />

                <TextView
                    android:id="@+id/text_amzn_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Ante el desastre derivado de los sismos del 7 y 19 de septiembre en la República Mexicana, en Cruz Roja Mexicana necesitamos de tu ayuda para apoyar a las personas afectadas.
Hemos abierto una Wish List en Amazon.com.mx para facilitar el acopio y la entrega a la Cruz Roja Mexicana de productos que son muy necesarios para hacer frente a la emergencia. Te invitamos ser solidario con aquellos que cuentan con nosotros y a donar comprando artículos de esta Wish List. Amazon México reunirá y entregará los productos donados por sus clientes directamente a la Cruz Roja Mexicana. Agradecemos tu generosidad. #AyudarNosMueve"
                    android:textIsSelectable="true"
                    android:textSize="16sp"
                    />

                <Button
                    android:id="@+id/amzn_url"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="@string/quiero_ayudar"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_slim_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/card_view_layout_padding"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Fundación Carlos Slim"
                    android:textColor="@color/orange"
                    android:textSize="22sp"
                    />

                <TextView
                    android:id="@+id/text_slim_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Debido a los graves daños provocados por los recientes sismos que impactaron a México, Fundación Carlos Slim, Fundación Telmex - Telcel, así como Telcel y Telmex ampliaron su campaña para aportar $5 pesos por cada $1 que la sociedad done. Los recursos que se capten se destinarán a la atención de la emergencia, así como en la reconstrucción de escuelas y centros de salud."
                    android:textIsSelectable="true"
                    android:textSize="16sp"
                    />

                <Button
                    android:id="@+id/slim_url"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="@string/quiero_ayudar"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card_view_google_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/card_view_layout_padding"
                >

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dona con Google"
                    android:textColor="@color/orange"
                    android:textSize="22sp"
                    />

                <TextView
                    android:id="@+id/text_google_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Google proporciona este servicio de donación para ayudarle a dirigir sus fondos para un impacto local efectivo"
                    android:textColor="@android:color/secondary_text_light"
                    android:textIsSelectable="true"
                    android:textSize="16sp"
                    />

                <Button
                    android:id="@+id/google_url"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="@string/quiero_ayudar"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>